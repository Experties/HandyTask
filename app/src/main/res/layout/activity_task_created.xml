<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="experties.com.handytask.activities.TaskCreatedActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tolBrTaskCreation"
        style="@style/toolbar">
        <TextView
            android:text="@string/app_name"
            style="@style/toolbar.title"
            android:id="@+id/task_toolbar_title" />
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/creation_fragment"
        android:layout_below="@+id/tolBrTaskCreation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>
