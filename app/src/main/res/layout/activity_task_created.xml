<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="experties.com.handytask.activities.TaskCreatedActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tolBrTaskCreation"
        style="@style/toolbar">
        <TextView
            android:text="@string/app_name"
            style="@style/toolbar.title"
            android:id="@+id/task_toolbar_title" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrVwTaskCreation"
        android:layout_above="@+id/btnTaskContainer"
        android:layout_below="@+id/tolBrTaskCreation"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/btnTaskContainer"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        style="@style/linearLayout">

        <Button
            android:id="@+id/cancelTaskBtn"
            android:text="Cancel"
            style="@style/linearLayout.secondary" />

        <Button
            android:id="@+id/nextTaskBtn"
            android:text="Next"
            style="@style/linearLayout.primary" />
    </LinearLayout>
</RelativeLayout>
