<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="experties.com.handytask.activities.DetailedTaskViewActivity">
    <ProgressBar
        android:id="@+id/pbDetailTask"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/tolBrDetailTask"
        style="@style/toolbar">
        <TextView
            android:text="@string/app_name"
            style="@style/toolbar.title"
            android:id="@+id/detail_task_toolbar_title" />
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/details_task_fragment"
        android:layout_below="@+id/tolBrDetailTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>
