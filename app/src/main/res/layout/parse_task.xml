<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivMainTaskPhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/no_image_avail"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:id="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivMainTaskPhoto"
        style="@style/ListViewTextTitle"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name, State"
        android:id="@+id/tvLocation"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivMainTaskPhoto"
        android:drawableLeft="@drawable/geo_fence_12"
        android:textColor="#29a5d8"
        android:textSize="14dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x mi"
        android:id="@+id/tvRelativeDistance"
        android:layout_alignTop="@+id/tvLocation"
        android:layout_toRightOf="@+id/tvLocation"
        android:layout_toEndOf="@+id/tvLocation"
        android:textSize="14dp"
        android:textColor="#29a5d8"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:id="@+id/tvDescription"
        android:layout_below="@+id/tvLocation"
        android:layout_toRightOf="@+id/ivMainTaskPhoto"
        android:layout_toEndOf="@+id/ivMainTaskPhoto"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x h"
        android:id="@+id/tvRelativeTime"
        android:paddingBottom="5dp"
        android:paddingRight="11dp"
        android:textColor="#BABABA"
        android:layout_alignBottom="@+id/tvTitle"
        android:layout_alignRight="@+id/tvTitle"
        android:layout_alignEnd="@+id/tvTitle"
        android:drawableLeft="@drawable/clock_12"/>


</RelativeLayout>
